<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="auth.dao.UserMapper">
    <select id="getUserByEmailOrUsername" resultType="User">
        select * from `user` where email = #{emailOrUsername} or username = #{emailOrUsername};
    </select>
    <insert id="addUser" parameterType="User">
        insert `user`(email,username,passwd,user_code)
        values(#{email},#{username},#{passwd},#{userCode});
    </insert>
    <update id="active" parameterType="String">
        update `user` set activation = 1 where user_code = #{userCode};
    </update>
    <update id="updateUserCode" parameterType="String">
        update `user` set user_code = #{userCode} where email = #{email};
    </update>
</mapper>
