<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bbs.dao.UserMapper">
    <select id="getAllUsers" resultType="User">
        select * from `user`
  </select>
    <select id="getUserByEmail" resultType="User" parameterType="String">
        select * from user where email = #{email}
  </select>
    <select id="getUserByUsername" resultType="User" parameterType="String">
        select * from user where username = #{username}
  </select>
    <select id="getUsersByLevel" resultType="User" parameterType="int" >
        select * from `user` where `level` = #{level}
  </select>

    <insert id="addUser" parameterType="User">
        insert `user`(email,username,passwd,user_code)
        values(#{email},#{username},#{passwd},#{userCode})
    </insert>
    <update id="active" parameterType="String">
        update `user` set activation = 1 where user_code = #{userCode}
    </update>
    <update id="updateUserCode" parameterType="String">
        update `user` set user_code = #{userCode} where email = #{email}
    </update>
</mapper>
